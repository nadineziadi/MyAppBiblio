pipeline {
    agent any 
    stages {
        stage ("Clean up") {
            steps {
                bat 'del /s /q "C:\\Users\\Nadine Ziedi\\.jenkins\\workspace\\astonvilla\\*"'
                bat 'rmdir /s /q "C:\\Users\\Nadine Ziedi\\.jenkins\\workspace\\astonvilla" 2>nul'
            }
        }
        stage ("Clone repo") {
            steps {
                bat 'git clone https://github.com/Raouf-Rhimi/astonvilla-app.git'
            }
        }
        stage ("Generate docker image") {
            steps {
                dir("astonvilla-app") {
                    bat 'docker build -t kakachisensei/astonvilla-app:1.1.${env.BUILD_NUMBER} .'
                }
            }
        }
        stage ("Push docker image") {
            steps {
                dir("astonvilla-app") {
                    bat 'docker push kakachisensei/astonvilla-app:1.1.${env.BUILD_NUMBER}'
                }
            }
        }
    }
}
